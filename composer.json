{
    "name": "lemax10/simple-actions",
    "description": "Реализация паттерна простых переиспользуемых действий",
    "keywords": ["php", "laravel", "actions", "helpers"],
    "homepage": "https://pyankov.pro",
    "type": "package",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Vladimir Pyankov (aka LeMaX10)",
            "email": "v@pyankov.pro"
        }
    ],
    "require": {
        "php": ">=8.0.0",
        "laravel/framework": ">=8.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "LeMaX10\\SimpleActions\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LeMaX10\\SimpleActions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LeMaX10\\SimpleActions\\SimpleActionServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
